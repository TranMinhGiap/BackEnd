extends ../../layouts/default.pug
include ../../mixins/filter-status.pug

block main
  if(role.permissions.includes("account_view"))
    h1(class="mb-4") Danh sách tài khoản

    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-6
            +filter-status(filterStatus)

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if(role.permissions.includes("account_create"))
              a(
                href=`${prefixAdmin}/accounts/create`
                class="btn btn-outline-success"
              ) Thêm mới
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr 
              th 
                input(type="checkbox" name="checkall")
              th STT
              th Avatar
              th Họ tên
              th Phân Quyền
              th Email
              th Trạng thái
              th Hành động
          tbody 
            each item, idx in records
              tr 
                th 
                  input(type="checkbox" name="id" value=item.id)
                //- td #{(pagination.currentPage - 1) * pagination.limitItems + idx + 1} do chua phan trang nen de tang theo chi so
                td #{idx + 1}
                td
                  img(src=item.avatar alt=item.fullName width="100px" height="100px")
                td #{item.fullName}
                td #{item.role || 'Không xác định'}
                //- td #{role[item.role_id] || 'Không xác định'}
                td #{item.email}
                td 
                  if(item.status === "active")
                    button(
                      button-change-status
                      data-status="active"
                      data-id=item.id
                      class="badge badge-success"
                    ) Hoạt động
                  else 
                    button(
                      button-change-status
                      data-status="inactive"
                      data-id=item.id
                      class="badge badge-danger"
                    ) Dừng hoạt động
                td
                  if(role.permissions.includes("account_edit"))
                    a(
                      href=`${prefixAdmin}/accounts/edit/${item.id}`
                      class="btn btn-warning btn-sm"
                    ) Sửa
                  if(role.permissions.includes("account_delete"))
                    button(
                      class="btn btn-danger btn-sm ml-1"
                      data-id=item.id
                      button-delete
                    ) Xóa
                  a(
                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                    class="btn btn-secondary btn-sm ml-1"
                  ) Chi tiết
    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/accounts/delete`
    )

    script(src="/Admin/js/product-category.js")
    //- script(src="/Admin/js/script.js")
  else
    span(
      class="badge badge-danger text-center"
    ) Không có quyền truy cập! Liên hệ với admin để hỗ trợ.