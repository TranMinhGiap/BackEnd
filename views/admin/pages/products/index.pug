extends ../../layouts/default.pug
block main  
  h1.text-center Danh sách sản phẩm

  table.table.table-hover.table-sm
    thead
      tr 
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động
    tbody 
      each item, idx in products
        tr 
          td #{idx + 1}
          td
            img(src=item.thumbnail alt=item.title width="100px" height="75px")
          td #{item.title}
          td #{item.price}$
          td 
            a(href="#" class=`badge ${item.status ? "badge-success" : "badge-error"}`) #{item.status ? "Hoạt động" : "Không hoạt động"}
          td
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ml-1") Xóa