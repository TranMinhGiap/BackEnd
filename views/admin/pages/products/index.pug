extends ../../layouts/default.pug
block main  
  h1.text-center Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      each item in filterStatus
        button(class=`btn btn-sm ml-1 btn-outline-success ${item.class}` button-status=item.status) #{item.name}
      //- button(class="btn btn-sm ml-1 btn-outline-success active" button-status="") Tất cả
      //- button(class="btn btn-sm ml-1 btn-outline-success" button-status="active") Hoạt động
      //- button(class="btn btn-sm ml-1 btn-outline-success" button-status="inactive") Dừng hoạt động
      
  .card.mb-3
    .card-header Danh sách sản phẩm
    .card-body
      table.table.table-hover.table-sm
        thead
          tr 
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động
        tbody 
          each item, idx in products
            tr 
              td #{idx + 1}
              td
                img(src=item.thumbnail alt=item.title width="100px" height="75px")
              td #{item.title}
              td #{item.price}$
              td 
                a(href="#" class=`badge ${item.status === "active" ? "badge-success" : "badge-danger"}`) #{item.status === "active" ? "Hoạt động" : "Không hoạt động"}
              td
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xóa

  