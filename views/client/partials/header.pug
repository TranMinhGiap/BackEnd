include ../mixins/sub-menu.pug

header.header
  .container
    .row.align-items-center
      .col-3 
        .inner-logo 
          a(href="/")
            img(src="/images/logo.svg" alt="Logo")
      .col-4
        form(action="/search" method="GET")
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword || ""
            )
            button(
              type="submit"
              class="btn btn-outline-primary ml-1"
            ) Tìm
      .col-5 
        .inner-menu
          ul 
            if !user
              li
                a(href="/user/login") Đăng nhập
              li
                a(href="/user/register") Đăng ký
            else 
              li 
                a(href="/user/info" class="btn btn-primary") #{user.fullName}
              li
                a(
                  href="/user/logout"
                  class="btn btn-sm btn-outline-danger"
                ) Đăng xuất
            li
              a(href="/") Trang Chủ
            li(class="sub-menu")
              -const pathProduct = "/products"
              a(href=pathProduct) Sản Phẩm
                +sub-menu(layoutProductsCategory, pathProduct)
            li
              a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})