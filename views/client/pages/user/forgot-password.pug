extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Quên mật khẩu
        form(action="/user/password/forgot" method="POST")
          
          .form-group
            label(for="email") Email
            input#email.form-control(type="email" name="email" required)
          
          div(class="form-group text-center")
            button.btn.btn-block.btn-outline-primary(type="submit") Xác nhận