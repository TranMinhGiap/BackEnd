extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Đăng nhập tài khoản
        form(action="/user/login" method="POST")
          
          .form-group
            label(for="email") Email
            input#email.form-control(type="email" name="email" required)

          .form-group
            label(for="password") Mật khẩu
            input#password.form-control(type="password" name="password" required)
          
          div(class="form-group text-center")
            button.btn.btn-block.btn-outline-primary(type="submit") Đăng nhập
        a(href="/user/password/forgot") Quên mật khẩu